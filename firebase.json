{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/*",
        "function": "connectapp"
      },
      {
        "source": "/*/*/*",
        "function": "connectapp"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}
